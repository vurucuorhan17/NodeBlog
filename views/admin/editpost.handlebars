
<section id="contact" class="md-padding">
	<div class="container">
			<br>
			<br>
			<br>
			<br>
			{{> admin-nav}}
			<br><br><br>
			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">Gönderi Güncelle</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/admin/posts/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
				<input type="hidden" name="_method" value="PUT">
					<div class="row">
						<div class="offset-2 col-md-8">
                            <div class="form-group">
								<input class="form-control" name="title" type="text" value="{{post.title}}" required="required">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<textarea class="form-control" name="content" required="required">{{post.content}}</textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								
								<select name="category" class="form-control">
									{{#each categories}}
									<option value="{{id}}">{{name}}</option>
									{{/each}}
								</select>
								
							</div>
							<div class="form-group">
								<input class="form-control" name="post_image" type="file" required="required" >
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">Gönderiyi Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>